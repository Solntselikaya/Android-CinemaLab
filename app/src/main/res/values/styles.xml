<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles-->
    <style
        name="Theme.CinemaLab.caption"
        parent="Theme.CinemaLab">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style
        name="Theme.CinemaLab.body1"
        parent="Theme.CinemaLab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CinemaLab.body2"
        parent="Theme.CinemaLab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CinemaLab.button"
        parent="Theme.CinemaLab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CinemaLab.h5"
        parent="Theme.CinemaLab">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.CinemaLab.h6"
        parent="Theme.CinemaLab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="AlertDialogTitleTextStyle"
        parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AlertDialogBodyTextStyle"
        parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="shape_appearance_16dp">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="button_orange" parent="Theme.CinemaLab.button">
        <item name="android:background">@drawable/style_button_filled</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_outlined" parent="Theme.CinemaLab.button">
        <item name="android:background">@drawable/style_field_stroke</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>